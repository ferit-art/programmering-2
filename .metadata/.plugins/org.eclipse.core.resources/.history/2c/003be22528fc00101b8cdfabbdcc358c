package upp1;

import java.awt.Graphics2D;
import java.awt.Image;

import se.egy.graphics.Drawable;

public abstract class Entity implements Drawable {
	private Image img;
	private double x, y;
	private int speed;
	private int dx = 1;
	private int dy = 1;
	private boolean active = true;

	/**
	 * Konstruktor
	 */
	public Entity(Image image, double xPos, double yPos, int speed) {
		this.img = image;
		this.speed = speed;
		x = xPos;
		y = yPos;
	}

	public int getHeight() {
		return img.getHeight(null);
	}
	
	public int getWidth() {
		return img.getWidth(null);
	}
	public double getX() {
		return x;
	}

	public double getY() {
		return y;
	}

	public void setX(double value) {
		x = value;
	}

	public void setY(double value) {
		y = value;
	}

	public void draw(Graphics2D g) {
		g.drawImage(img, (int) x, (int) y, null);
	}

	public abstract void move();

	public void setDirectionX(int dx) {
		this.dx = dx;
	}

	public void setDirectionY(int dy) {
		this.dy = dy;
	}

	public void setActive(boolean True_or_False) {
		active = True_or_False;
	}

	public boolean getActive() {
		return active;
	}

	public int getDx() {
		return dx;
	}

	public int getDy() {
		return dy;
	}

	public int getSpeed() {
		return speed;
	}

	public void setSpeed(int speed) {
		this.speed = speed;
	}
}
